package net.maxdev.ftc.utils;

import com.qualcomm.robotcore.hardware.DcMotor;
import com.qualcomm.robotcore.hardware.DcMotorSimple;
import com.qualcomm.robotcore.hardware.HardwareMap;

public class LMDMechanism{ 
    private DcMotor elevator = null;  
    private Telemetry telemetry = null;

    public void init(Telemetry telemetry, HardwareMap hardwareMap ){
        this.telemetry = telemetry;
        elevator = hardwareMap.get(DcMotor.class, "elevator");

         elevator.setDirection(DcMotorSimple.Direction.FORWARD);  
         elevator.setZeroPowerBehavior(DcMotor.ZeroPowerBehavior.BRAKE);
         elevator.setMode(DcMotor.RunMode.STOP_AND_RESET_ENCODER);
         elevator.setMode(DcMotor.RunMode.RUN_TO_POSITION);
    }

    public void elevatorMove(boolean isGoingUp, double power){
        if (isGoingUp){
            elevator.setTargetPosition(10000); //valoare random necalculata
            elevator.setPower(power);
        }
        else{
            elevator.setTargetPosition(0);
            elevator.setPower(power);
        }
    }

    //setting positions overriding the limits
    public void elevatorOverride(int position, double power ){
        elevator.setTargetPosition(position);
        elevator.setPower(power)
    }

    //manually getting and setting  positions **joystick**
   public void elevatorManual(double power){
       elevator.setPower(power);
   }


    public void debug() {
        telemetry.addLine()
                        .addData("Elevator Position", elevator.getCurrentPosition());
    }


}